<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Holy_Quran_JSON.MainPage">
        <VerticalStackLayout>
        <Button Text="Exit" Clicked="Exit"></Button>
        <ListView x:Name="dataList" HasUnevenRows="True" SelectionMode="None" SeparatorColor="Aquamarine">
            <ListView.ItemTemplate>
                <DataTemplate>
                        <Label Text="{Binding id}" TextColor="Aqua"></Label>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </VerticalStackLayout>
</ContentPage>
